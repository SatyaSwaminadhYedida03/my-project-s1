aa# ============================================
# Smart Hiring System - Environment Configuration
# ============================================
# Copy this file to .env and update with your actual values
# NEVER commit .env file to version control!

# ============================================
# Database Configuration
# ============================================
# Local MongoDB: mongodb://localhost:27017/
# MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/
MONGODB_URI=mongodb://localhost:27017/
DB_NAME=smart_hiring_db

# ============================================
# JWT Authentication
# ============================================
# Generate strong secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
# Token expiration in seconds (3600 = 1 hour)
JWT_ACCESS_TOKEN_EXPIRES=3600

# ============================================
# Email Configuration (Optional - for notifications)
# ============================================
# For Gmail: Enable 2FA and create App Password
# Guide: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================
# LinkedIn OAuth (Optional - for profile import)
# ============================================
# Get credentials from: https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ============================================
# Flask Application Settings
# ============================================
# Development: development | Production: production
FLASK_ENV=development
# Enable debug mode (ONLY for development)
FLASK_DEBUG=True
# Flask secret key for sessions (generate unique value)
SECRET_KEY=your-flask-secret-key

# ============================================
# Fairness & Bias Prevention
# ============================================
# Threshold values for demographic parity and equal opportunity (0.0-1.0)
DEMOGRAPHIC_PARITY_THRESHOLD=0.1
EQUAL_OPPORTUNITY_THRESHOLD=0.1

# ============================================
# File Upload Configuration
# ============================================
# Max file size in bytes (16777216 = 16MB)
MAX_CONTENT_LENGTH=16777216
# Directory for storing uploaded resumes
UPLOAD_FOLDER=uploads/resumes

# ============================================
# CORS Configuration
# ============================================
# Frontend URL for development (change for production)
FRONTEND_URL=http://localhost:3000

# ============================================
# DEPLOYMENT LICENSE & AUTHORIZATION (REQUIRED FOR PRODUCTION)
# ============================================
# These variables prevent unauthorized deployments
# Contact admin@smarthiring.com for production license

# Deployment license key (required for production)
DEPLOYMENT_LICENSE_KEY=your-deployment-license-key-here

# Deployment signature (auto-generated from license key)
DEPLOYMENT_SIGNATURE=your-deployment-signature-here

# Authorized domains (comma-separated, no spaces)
AUTHORIZED_DOMAINS=localhost,yourdomain.com

# Current deployment domain
DEPLOYMENT_DOMAIN=localhost

# Skip license check (DEVELOPMENT ONLY - set to 'false' in production)
SKIP_LICENSE_CHECK=true

# Code obfuscation key (for protecting sensitive algorithms)
OBFUSCATION_KEY=your-obfuscation-key-here
