            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Senior Software Engineer\",\n  \"description\": \"We are looking for an experienced developer\",\n  \"required_skills\": [\"Python\", \"Flask\", \"MongoDB\"],\n  \"location\": \"Remote\",\n  \"salary_range\": \"$100k - $150k\"\n}"
            },
            "url": {
